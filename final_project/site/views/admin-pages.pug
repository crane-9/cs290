doctype html
html
    head
        - var page = {Title: "Page Management"}
        include includes/base_head.pug
        link(rel='stylesheet' href='/static/css/admin.css')
    body
        include includes/admin/header.pug

        .layout 
            include includes/admin/nav.pug

            main
                h2 Pages

                table.database-table
                    thead: tr: th(colspan=8) Page Data
                    
                    tbody
                        tr
                            th Select

                            //- List all properties, except for Id.
                            each property in table.properties
                                if property != "Canonical"
                                    th #{property}

                        //- A whole bunch of nesting for logic.
                        each entry in entries
                            tr(class=entry.Canonical? "canonical" : "")
                                //- Check/selection box
                                td: input(type="checkbox", name="select-" + entry.Path, id="select-" + entry.Path)
                                
                                //- The important information.
                                each property in table.properties
                                    if property == "Canonical"
                                        //- Nothing -- skip this property.

                                    else if property == "Path"
                                        td: a(target="blank" href="/" + entry[property]) #{entry[property]}

                                    else if property == "Hidden"
                                        td #{entry[property]? 'Yes' : 'No'}

                                    else
                                        td #{entry[property]}

                    tfoot: tr
                        td#selection-counter(colspan=2)
                        td#total-counter(colspan=6) #{table.size} Total Pages

                .controls 
                    a.btn#new(href="/admin/pages/new-page") New Page

                    button#edit(type="button") Edit Entry 
                    button#delete(type="button") Delete Entries
                        
