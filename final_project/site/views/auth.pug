doctype html
html
    head
        - var page = {Title: "Admin Login"}
        include includes/admin/head.pug
    body
        header#admin
            h1 Authenticate

        main
            a.back-link(href="/")
                i.gg-arrow-long-left
                span Go back

            form.simple-vertical#login(method="post")
                //- Login form with hints for placeholders. 
            
                label(for="username") Username
                    input#username(type="text", name="username", placeholder="admin")

                label(for="password") Password
                    input#password(type="password", name="password", placeholder="admin")

                input(type="submit", value="Login")

            include includes/admin/feedback.pug
