doctype html
html
    head
        include includes/head.pug
    body
        include includes/header.pug

        main#site-map
            .site-map.heading-font

                //- Iterative links.
                each entry of pages
                    a(href="/" + entry.Path) #{entry.Title} 

                //- Not a great idea to keep in production, but here for the sake of development.
                a(href="/admin/auth") Admin portal 
            
            //- Optional body text, if set.
            if page.BodyText
                .body-text!= page.BodyText

        include includes/footer.pug
        