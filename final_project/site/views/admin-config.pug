doctype html
html
    head
        - var page = {Title: "Site Configuration"}
        include includes/base_head.pug
        link(rel='stylesheet' href='/static/css/admin.css')
    body
        include includes/admin/header.pug

        .layout 
            include includes/admin/nav.pug

            main
                h2 Meta Information 
                    
                form.simple-vertical#site-info(method="post",
                    action="/admin/api/update/site-info",
                )
                    label(for="site-title") Site Title 
                        input#site-title(
                            type="text",
                            name="title",
                            placeholder=meta.Title
                        )

                    label(for="site-description") Site Description 
                        input#site-description(
                            type="text",
                            name="description",
                            placeholder=meta.Description
                        )

                    label(for="site-author") Site Author 
                        input#site-author(
                            type="text",
                            name="author",
                            placeholder=meta.Author
                        )

                    label(for="site-favicon") Site Favicon
                        input#site-favicon(
                            type="file", 
                            accept="image/*",
                            name="favicon"
                        )
                    
                    input(type="submit", value="Apply Changes")

                include includes/admin/feedback.pug
